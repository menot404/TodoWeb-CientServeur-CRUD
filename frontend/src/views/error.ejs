<div class="container error-container">
  <h1>❌ Erreur</h1>
  <p class="error-message"><%= message %></p>
  <% if (error && Object.keys(error).length > 0) { %>
  <details class="error-details">
    <summary>Détails de l'erreur</summary>
    <pre><code><%= JSON.stringify(error, null, 2) %></code></pre>
  </details>
  <% } %>
  <div class="error-actions">
    <a href="/app/v1/" class="btn btn-primary">Retour à l'accueil</a>
  </div>
</div>

<style>
  .error-container {
    text-align: center;
    padding: 50px 30px;
  }

  .error-message {
    font-size: 18px;
    color: #d32f2f;
    margin: 20px 0;
  }

  .error-details {
    background: #f5f5f5;
    padding: 15px;
    border-radius: 8px;
    margin: 20px 0;
    text-align: left;
  }

  .error-details summary {
    cursor: pointer;
    color: #666;
    font-weight: 500;
  }

  .error-details pre {
    overflow-x: auto;
    background: #fff;
    padding: 10px;
    border-radius: 4px;
    margin-top: 10px;
  }

  .error-actions {
    margin-top: 30px;
  }
</style>
